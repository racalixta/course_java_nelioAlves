package application;

import java.time.Instant;
import java.time.LocalDate;
import java.time.LocalDateTime;

public class Program {

	public static void main(String[] args) {
		
		// pode utilizar d0X.toString() para já colocar no padrão ISO 
		
		// data local
		LocalDate d01 = LocalDate.now();
		System.out.println("LocalDate:  " + d01);

		// hora e data local 
		LocalDateTime d02 = LocalDateTime.now();
		System.out.println("LocalDateTime: " + d02);
		
		// zulu/GMT date time
		Instant d03 = Instant.now();
		System.out.println("Instant: " + d03);
		
		// especicando um data
		LocalDate d04 = LocalDate.parse("2022-07-20");
		System.out.println("LocalDate.parse:  " + d04);
		
		// especificando um hora e date 
		LocalDateTime d05 = LocalDateTime.parse("2022-07-20T01:30:25");
		System.out.println("LocalDateTime.parse: " + d05);
		
		// horario zulu = gmt
		Instant d06 = Instant.parse("2022-07-20T01:30:25Z");
		System.out.println("Instant.parse: " + d06);
		
		// especificando o horario de minas e irá converter para o horario do GMT
		Instant d07 = Instant.parse("2022-07-20T01:30:25Z-03:00");
		System.out.println("Instant.parse: " + d07);
	}

}
