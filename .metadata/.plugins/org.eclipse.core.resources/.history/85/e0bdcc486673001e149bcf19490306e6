package application;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Digite a quantidade de linhas e colunas da matriz: ");
		int n = sc.nextInt();
		int[][] mat = new int[n][n];
		
		for(int i = 0; i < n; i++) {
			for(int k = 0; k < n; k++) {
				System.out.printf("Digite um número para a posição %d, %d: ", i, k);
				mat[i][k] = sc.nextInt();
			}
		}
		
		System.out.println();
		showMatriz(mat, n);
		
		System.out.println("\nMain Diagonal: ");
		mainDiagonal(mat, n);
		
		sc.close();
	}
	
	public static void showMatriz(int[][] mat, int n) {
		for(int i = 0; i < n; i++) {
			for(int k = 0; k < n; k++) {
				if(k == (n - 1)) {
					System.out.println(mat[i][k]);
				} else {
					System.out.print(mat[i][k] + ", ");
				}
				
			}
		}
	}
	
	public static void mainDiagonal(int[][] mat, int n) {
		for(int i = 0; i < n; i++) {
			for(int k = 0; k < n; k++) {
				if(k == i) {
					System.out.println(mat[i][k]);
				}
				
			}
		}
	}

}
